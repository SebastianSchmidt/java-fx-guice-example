<?xml version="1.0" encoding="UTF-8"?>

<?import javafx.scene.layout.GridPane?>
<?import javafx.geometry.Insets?>
<?import javafx.scene.control.Label?>
<?import javafx.scene.control.TextField?>
<?import javafx.scene.control.Button?>

<GridPane fx:controller="io.github.sebastianschmidt.javafx_guice_example.controller.ResultController"
          hgap="10" vgap="10"
          xmlns:fx="http://javafx.com/fxml">

    <padding>
        <Insets top="10" right="10" bottom="10" left="10" />
    </padding>

    <Label text="Result:" GridPane.columnIndex="0" GridPane.rowIndex="0" />
    <TextField fx:id="resultTextField" editable="false" GridPane.columnIndex="1" GridPane.rowIndex="0" />

    <Button text="Close" onAction="#close" GridPane.columnIndex="1" GridPane.rowIndex="1" />

</GridPane>