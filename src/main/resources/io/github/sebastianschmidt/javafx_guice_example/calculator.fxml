<?xml version="1.0" encoding="UTF-8"?>

<?import javafx.scene.layout.GridPane?>
<?import javafx.geometry.Insets?>
<?import javafx.scene.control.Label?>
<?import javafx.scene.control.TextField?>
<?import javafx.scene.control.Button?>

<GridPane fx:controller="io.github.sebastianschmidt.javafx_guice_example.controller.CalculatorController"
          hgap="10" vgap="10"
          xmlns:fx="http://javafx.com/fxml">

    <padding>
        <Insets top="10" right="10" bottom="10" left="10" />
    </padding>

    <Label text="First number:" GridPane.columnIndex="0" GridPane.rowIndex="0" />
    <TextField fx:id="firstNumberTextField" GridPane.columnIndex="1" GridPane.rowIndex="0" />

    <Label text="Second number:" GridPane.columnIndex="0" GridPane.rowIndex="1" />
    <TextField fx:id="secondNumberTextField" GridPane.columnIndex="1" GridPane.rowIndex="1" />

    <Button text="Calculate" onAction="#calculate" GridPane.columnIndex="1" GridPane.rowIndex="2" />

</GridPane>